{
	"manifest_version" : 2,
	"name" : "Script injection",
	"short_name" : "si",
	"version" : "1.2",
	"description" : "Расширение для локального, динамического добавления js/css на страницу",
	"permissions": ["activeTab", "storage", "tabs", "<all_urls>"],

	"icons": {
		"64": "icons/off-64.png",
		"128": "icons/off-128.png"
	},

	"browser_action": {
		"default_icon": {
			"64": "icons/off-64.png",
			"128": "icons/off-128.png"
		},
		"default_title": "You should have a server running on ws://localhost:9999",
		"default_popup": "popup.html"
	},

	"background" : {
	   "scripts" : ["src/background.js"],
	   "persistent" : false
	},

	"content_security_policy": "script-src 'self' https://jsonplaceholder.typicode.com/*; object-src 'self'"
}
